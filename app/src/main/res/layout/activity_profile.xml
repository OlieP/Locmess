<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="pt.ulisboa.tecnico.cmov.locmess.ProfileActivity">


    <LinearLayout
        android:id="@+id/txtLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:text="KEYS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/txtKeys"
            android:layout_weight="1"/>

        <TextView
            android:text="VALUES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/txtValues"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="ADD NEW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddNew"
        android:layout_alignParentBottom="true"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:id="@+id/grid"
        android:layout_alignLeft="@id/txtLayout"
        android:layout_alignRight="@id/txtLayout"
        android:layout_alignTop="@id/txtLayout"
        android:layout_alignBottom="@id/btnAddNew"
        android:layout_marginTop="20dp"/>



</RelativeLayout>
